<h1>Events</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.notes %></td>
        <td><%= event.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Items</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
          <th>Category</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h1>Courses</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
          <th>Course Days</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
            <% course.course_events.each do |event| %>
                <% event.course_days.each do |day| %>
                        <td><%= day.date %></td>
                <% end %>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

